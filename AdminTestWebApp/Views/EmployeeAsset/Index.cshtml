@model IEnumerable<Shared.ViewModels.EmployeeAssetViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";

}

<h1>Employees Assets</h1>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="table table-hover text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.employeeId)
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.assetName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.assetType)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employeeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.firstName) &nbsp; @Html.DisplayFor(modelItem => item.lastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.assetName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.assetType)
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>